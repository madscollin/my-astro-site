---
export interface Props {
    title: string;
    body: string;
    href: string;
}

const { href, title, body } = Astro.props;
---

<a
    href={href}
    class="rounded-xl px-6 py-5 transition-all shadow-lg bg-white hover:ring-4 hover:ring-orange-500 hover:ring-offset-1 hover:ring-offset-orange-600"
>
    <h2 class="font-light text-xl text-gray-900">
        {title}
        <span>&rarr;</span>
    </h2>
    <p class="font-light text-gray-600">
        {body}
    </p>
</a>
