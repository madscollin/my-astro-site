---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="robots" content="noindex" />
        <meta name="googlebot" content="noindex" />
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="bg-zinc-100">
        <slot />
        <style is:global>
            /* Regular input field */
            .form-input {
                @apply w-full py-2 text-gray-700 border-gray-300 rounded-md shadow-sm bg-gray-50 focus:border-orange-500 focus:ring focus:ring-orange-500 focus:ring-opacity-20 transition-all placeholder:text-gray-400 placeholder:font-light;
            }

            /* Regular checkbox */
            .form-checkbox {
                @apply rounded border-gray-400 text-orange-500 shadow-sm focus:border-orange-500 focus:ring-offset-1 focus:ring-orange-500 focus:ring-opacity-20 transition-all;
            }

            /* Regular radio buttons */
            .form-radio {
                @apply border-gray-400 text-orange-500 shadow-sm focus:border-orange-500 focus:ring-offset-1 focus:ring-orange-500 focus:ring-opacity-20 transition-all;
            }

            .btn-primary {
                @apply p-3 bg-orange-600 text-orange-50 rounded-md shadow-md hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-orange-600 focus:ring-opacity-30 transition ease-in-out duration-200;
            }

            .btn-default {
                @apply p-3 bg-white text-gray-700 rounded-md shadow-sm hover:bg-gray-50 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-300 focus:ring-opacity-30 transition ease-in-out duration-200;
            }
        </style>
    </body>
</html>
